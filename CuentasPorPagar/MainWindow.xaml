<Window x:Class="CuentasPorPagar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuentasPorPagar"
        mc:Ignorable="d"
        Title="Inicio" Height="350" Width="525" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Height="319" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="283*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="Menu" VerticalAlignment="Top" Margin="1,8,-1,0" Grid.ColumnSpan="2">
            <MenuItem Header="Archivo">
                <MenuItem Header="Parámetros"/>
                <MenuItem Header="Cerrar sesión" Click="MenuItem_Click_1"/>
                <MenuItem Header="Salir"/>
            </MenuItem>
            <MenuItem Header="Gestión">
                <MenuItem Name="SupplierCrudItem" Header="Provedores" Click="SupplierCrudItem_Click"/>
                <MenuItem Name="UserCrudItem" Header="Usuarios" Click="UserCrudItem_OnClick"/>
                <MenuItem Name="PaymentCrudItemm" Header="Pagos" Click="PaymentCrudItemm_Click"/>
                <MenuItem Header="Documentos">
                    <MenuItem Name="CreateDocEntry"  Header="Crear Entrada" Click="MenuItem_Click_2"/>
                    <MenuItem Header="Pendientes"/>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="Operaciones">
                <MenuItem Header="Generar Pago"/>
                <MenuItem x:Name="PaymentTypeCrudItem" Header="Concepto de Pago" Click="PaymentTypeCrudItem_Click"/>
                <MenuItem Header="Cierre"/>
            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem Header="Estado Cliente"/>
                <MenuItem Header="Estado Proveedor"/>
            </MenuItem>
            <MenuItem Header="Reporteria">
                <MenuItem Header="Documentos"/>
                <MenuItem Header="Proveedores" Click="MenuItem_Click_3"/>
                <MenuItem Header="Cierre"/>
            </MenuItem>
        </Menu>
        <Label x:Name="label" Content="Por pagar" HorizontalAlignment="Left" Margin="25,40,0,0" VerticalAlignment="Top" Width="100" Height="31"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="185" Width="465" Loaded="dataGrid_Loaded"/>
        <Label x:Name="txtUserPermission" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="134,40,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
