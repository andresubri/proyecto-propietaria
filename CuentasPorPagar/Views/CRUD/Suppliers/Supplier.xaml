<Window x:Class="CuentasPorPagar.Views.CRUD.Supplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CuentasPorPagar.Views.CRUD"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Suplidor"
        Width="519"
        Height="297"
        mc:Ignorable="d" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="154*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="SupplierDgv"
                  Width="480"
                  Height="212"
                  Margin="20,14,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top" Grid.RowSpan="2" />
        <Button x:Name="EditSupplierBtn"
                Width="76"
                Margin="111,123,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Editar" Grid.Row="1" />
        <Button x:Name="DeleteSupplierBtn"
                Width="76"
                Margin="198,123,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Eliminar" Grid.Row="1" Click="DeleteSupplierBtn_Click" />
        <Button x:Name="CreateSupplierBtn"
                Width="75"
                Margin="24,123,0,0"
                HorizontalAlignment="Left"
                Content="Crear" Click="CreateSupplierBtn_Click" Height="20" VerticalAlignment="Top" Grid.Row="1" />
        <Button x:Name="ExitSupplierBtn"
                Width="75"
                Margin="378,122,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Salir" Grid.Row="1" Click="ExitSupplierBtn_Click" />
    </Grid>
</Window>
