<Window x:Class="CuentasPorPagar.Views.CRUD.DocumentsEntry.DocumentsEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuentasPorPagar.Views.CRUD.DocumentsEntry"
        mc:Ignorable="d"
        Title="Documentos" Height="310.714" Width="520">
    <Grid>
        <Grid Loaded="Grid_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"/>
                <RowDefinition Height="154*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="DocumentDgv"
                  Width="480"
                  Height="212"
                  Margin="20,14,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top" Grid.RowSpan="2" />
            <Button x:Name="EditDocumentBtn"
                Width="76"
                Margin="111,123,0,14"
                HorizontalAlignment="Left"
                Content="Editar" Grid.Row="1" />
            <Button x:Name="DeleteDocumentBtn"
                Width="76"
                Margin="198,123,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Eliminar" Grid.Row="1" Height="23" />
            <Button x:Name="CreateDocumentBtn"
                Width="75"
                Margin="24,123,0,0"
                HorizontalAlignment="Left"
                Content="Crear"  Height="22" VerticalAlignment="Top" Grid.Row="1" Click="CreateDocumentBtn_Click" />
            <Button x:Name="ExitDocumentBtn"
                Margin="378,122,0,14"
                Content="Salir" Grid.Row="1" HorizontalAlignment="Left" Width="75" />
        </Grid>
    </Grid>
</Window>
