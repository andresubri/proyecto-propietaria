<Window x:Class="CuentasPorPagar.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CuentasPorPagar.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Iniciar sesión"
        Width="300"
        Height="350"
        mc:Ignorable="d">


    <Grid>
        <Label x:Name="label"
               Width="56"
               Margin="36,184,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Usuario" />
        <TextBox x:Name="UserField"
                 Width="136"
                 Height="23"
                 Margin="124,186,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap" />
        <Label x:Name="Label"
               Width="74"
               Margin="36,222,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Contraseña" />
        <PasswordBox x:Name="PasswordField"
                     Width="136"
                     Height="23"
                     Margin="124,224,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" />
        <Button x:Name="LoginButton"
                Width="256"
                Height="40"
                Margin="18,264,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="LoginButton_Click"
                Content="Iniciar sesión"
                IsDefault="True" />
        <Image x:Name="Image"
               Width="192"
               Height="122"
               Margin="54,26,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="/CuentasPorPagar;component/Resources/Logo.png" />
    </Grid>
</Window>
