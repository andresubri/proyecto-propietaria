<Window x:Class="CuentasPorPagar.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuentasPorPagar.Views"
        mc:Ignorable="d"
        Title="Iniciar sesióne" Height="350" Width="300">


    <Grid>
        <Label x:Name="label" Content="Usuario" HorizontalAlignment="Left" Margin="36,184,0,0" VerticalAlignment="Top" Width="56"/>
        <TextBox x:Name="userTxt" HorizontalAlignment="Left" Height="23" Margin="124,186,0,0" TextWrapping="Wrap" Text="Ingrese el usuario" VerticalAlignment="Top" Width="136"/>
        <Label x:Name="Label" Content="Contrasena" HorizontalAlignment="Left" Margin="36,222,0,0" VerticalAlignment="Top" Width="56"/>
        <TextBox x:Name="passwordTxt" HorizontalAlignment="Left" Height="23" Margin="124,224,0,0" TextWrapping="Wrap" Text="Ingrese la contrasena" VerticalAlignment="Top" Width="136"/>
        <Button x:Name="loginButton" Content="Iniciar sesión" HorizontalAlignment="Left" Margin="18,264,0,0" VerticalAlignment="Top" Width="256" Height="40"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="122" Margin="54,26,0,0" VerticalAlignment="Top" Width="192" Source="/CuentasPorPagar;component/Resources/Logo.png" />
    </Grid>
</Window>
