<Window x:Class="CuentasPorPagar.Views.CRUD.Supplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CuentasPorPagar.Views.CRUD"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Suplidor"
        Width="490"
        Height="300"
        mc:Ignorable="d" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="SupplierDgv"
                  Width="440"
                  Height="212"
                  Margin="20,14,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top" />
        <Button x:Name="EditSupplierBtn"
                Width="76"
                Margin="111,238,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Editar" />
        <Button x:Name="DeleteSupplierBtn"
                Width="76"
                Margin="198,238,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Eliminar" />
        <Button x:Name="CreateSupplierBtn"
                Width="75"
                Margin="24,238,0,0"
                HorizontalAlignment="Left"
                Content="Crear" Click="CreateSupplierBtn_Click" Height="20" VerticalAlignment="Top" />
        <Button x:Name="ExitSupplierBtn"
                Width="75"
                Margin="378,237,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Salir" />
    </Grid>
</Window>
