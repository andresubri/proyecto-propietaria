<Window x:Class="CuentasPorPagar.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CuentasPorPagar.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Iniciar sesión"
        Width="300"
        Height="350"
        MinWidth="300"
        MinHeight="350"
        MaxWidth="300"
        MaxHeight="350"
        mc:Ignorable="d">


    <Grid Margin="0,0,8,0">
        <Label x:Name="label"
               Width="56"
               Margin="29,186,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Usuario"
               FontWeight="Bold" />
        <TextBox x:Name="UserField"
                 Width="150"
                 Height="23"
                 Margin="105,188,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 TextWrapping="Wrap" />
        <Label x:Name="Label"
               Width="74"
               Margin="25,221,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Contraseña"
               FontWeight="Bold" />
        <PasswordBox x:Name="PasswordField"
                     Width="150"
                     Height="23"
                     Margin="105,225,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" />
        <Button x:Name="LoginButton"
                Width="256"
                Height="40"
                Margin="18,264,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="LoginButton_Click"
                Content="Iniciar sesión"
                FontWeight="Bold"
                IsDefault="True" />
        <Image x:Name="Image"
               Width="265"
               Height="122"
               Margin="15,23,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="/CuentasPorPagar;component/Resources/Logo.png" />
    </Grid>
</Window>
