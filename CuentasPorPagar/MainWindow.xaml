<Window x:Class="CuentasPorPagar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CuentasPorPagar"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Bienvenido"
        Width="528"
        Height="350"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid Height="319" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="234*" />
            <ColumnDefinition Width="283*" />
        </Grid.ColumnDefinitions>
        <Menu x:Name="Menu"
              Grid.ColumnSpan="2"
              Margin="1,8,-1,0"
              VerticalAlignment="Top">
            <MenuItem Header="Archivo">
                <MenuItem Header="Parámetros" />
                <MenuItem Click="MenuItem_Click_1" Header="Cerrar sesión" />
                <MenuItem Header="Salir" />
            </MenuItem>
            <MenuItem Header="Gestión">
                <MenuItem Name="SupplierCrudItem"
                          Click="SupplierCrudItem_Click"
                          Header="Provedores" />
                <MenuItem Name="UserCrudItem"
                          Click="UserCrudItem_OnClick"
                          Header="Usuarios" />
                <MenuItem Name="PaymentCrudItemm"
                          Click="PaymentCrudItemm_Click"
                          Header="Pagos" />
                <MenuItem Header="Documentos">
                    <MenuItem Name="CreateDocEntry"
                              Click="MenuItem_Click_2"
                              Header="Crear Entrada" />
                    <MenuItem Header="Pendientes" />
                </MenuItem>
            </MenuItem>

            <MenuItem Header="Operaciones">
                <MenuItem Header="Generar Pago" />
                <MenuItem x:Name="PaymentTypeCrudItem"
                          Click="PaymentTypeCrudItem_Click"
                          Header="Concepto de Pago" />
                <MenuItem Header="Cierre" />
            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem Header="Proveedor" Click="MenuItem_Click_4" />
                <MenuItem Header="Documentos" />
            </MenuItem>
            <MenuItem Header="Reporteria">
                <MenuItem Header="Documentos" />
                <MenuItem Click="MenuItem_Click_3" Header="Proveedores" />
                <MenuItem Header="Cierre" />
            </MenuItem>
        </Menu>
        <Label x:Name="PaymentLeft"
               Width="100"
               Height="31"
               Margin="25,40,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Por pagar: "
               FontWeight="Bold" />
        <DataGrid x:Name="dataGrid"
                  Grid.ColumnSpan="2"
                  Width="465"
                  Height="185"
                  Margin="25,75,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Loaded="dataGrid_Loaded" />
        <Label x:Name="txtUserPermission"
               Grid.Column="1"
               Margin="134,40,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontWeight="Bold" />

    </Grid>
</Window>