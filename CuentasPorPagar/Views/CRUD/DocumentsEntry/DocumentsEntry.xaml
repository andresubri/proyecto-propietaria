<Window x:Class="CuentasPorPagar.Views.CRUD.DocumentsEntry.DocumentsEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuentasPorPagar.Views.CRUD.DocumentsEntry"
        mc:Ignorable="d"
        Title="Documentos" Height="303.714" Width="520">
    <Grid>
        <Grid Loaded="Grid_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"/>
                <RowDefinition Height="154*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="DocumentDgv"
                  Width="480"
                  Height="152"
                  Margin="17,79,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top" Grid.RowSpan="2" />
            <Button x:Name="EditDocumentBtn"
                Width="76"
                Margin="206,124,0,0"
                HorizontalAlignment="Left"
                Content="Cargar" Grid.Row="1" Height="22" VerticalAlignment="Top" Click="EditDocumentBtn_Click_1" />
            <Button x:Name="DeleteDocumentBtn"
                Width="76"
                Margin="291,123,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Eliminar" Grid.Row="1" Height="23" Click="DeleteDocumentBtn_Click" />
            <Button x:Name="CreateDocumentBtn"
                Width="75"
                Margin="36,124,0,0"
                HorizontalAlignment="Left"
                Content="Crear"  Height="22" VerticalAlignment="Top" Grid.Row="1" Click="CreateDocumentBtn_Click" />
            <Button x:Name="ExitDocumentBtn"
                Margin="390,123,0,0"
                Content="Salir" Grid.Row="1" HorizontalAlignment="Left" Width="75" Height="23" VerticalAlignment="Top" />
            <Label x:Name="label" Content="Concepto" HorizontalAlignment="Left" Margin="14,40,0,0" VerticalAlignment="Top" Width="101" Height="28"/>
            <Label x:Name="label1" Content="Monto" HorizontalAlignment="Left" Margin="256,13,0,0" VerticalAlignment="Top" Width="78"/>
            <Label x:Name="label2" Content="Suplidor" HorizontalAlignment="Left" Margin="256,44,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label3" Content="No." HorizontalAlignment="Left" Margin="18,14,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="numberTxt" HorizontalAlignment="Left" Height="23" Margin="101,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="conceptTxt" HorizontalAlignment="Left" Height="23" Margin="102,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="amountTxt" HorizontalAlignment="Left" Height="23" Margin="342,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="supplierTxt" HorizontalAlignment="Left" Height="23" Margin="343,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="loadBtn" Content="Editar" HorizontalAlignment="Left" Margin="120,125,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="loadBtn_Click"/>
        </Grid>
    </Grid>
</Window>
