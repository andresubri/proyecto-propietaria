<Window x:Class="CuentasPorPagar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuentasPorPagar"
        mc:Ignorable="d"
        Title="Inicio" Height="350" Width="525" ResizeMode="NoResize">
    <Grid Height="319" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="283*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" VerticalAlignment="Top" Margin="1,8,-1,0" Grid.ColumnSpan="2">
            <MenuItem Header="Archivo">
                <MenuItem Header="Parámetros"/>
                <MenuItem Header="Cerrar sesión" Click="MenuItem_Click_1"/>
                <MenuItem Header="Salir"/>
            </MenuItem>
            <MenuItem Header="Gestión">
                <MenuItem Name="customerCrudItem" Header="Clientes" Click="MenuItem_Click"/>
                <MenuItem Name="supplierCrudItem" Header="Provedores"/>
                <MenuItem Name="userCrudItem" Header="Usuarios"/>
            </MenuItem>
            <MenuItem Header="Documentos">
                <MenuItem Header="Crear Entrada"/>
                <MenuItem Header="Pendientes"/>
            </MenuItem>
            <MenuItem Header="Operaciones">
                <MenuItem Header="Generar Pago"/>
                <MenuItem Header="Cierre"/>
            </MenuItem>
            <MenuItem Header="Consultas">
                <MenuItem Header="Estado Cliente"/>
                <MenuItem Header="Estado Proveedor"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
