<Window x:Class="CuentasPorPagar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CuentasPorPagar"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Pendientes"
        Width="743"
        Height="431"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d">
    <Grid Height="312" VerticalAlignment="Bottom">
        <Menu x:Name="Menu"
              Margin="0,-90,-0.2,0"
              VerticalAlignment="Top"
              Background= "#2196F3"
              Foreground="White" Height="48">
            <MenuItem Header="&#xD;&#xA;Archivo">
                <MenuItem Header="Parámetros" />
                <MenuItem Header="Cerrar sesión" Click="MenuItem_OnClick" />
                <MenuItem Header="Salir" />
            </MenuItem>
            <MenuItem Header="&#xD;&#xA;Gestión">
                <MenuItem Name="SupplierCrudItem"
                          Click="SupplierCrudItem_Click"
                          Header="Provedores" />
                <MenuItem Name="UserCrudItem"
                          Click="UserCrudItem_OnClick"
                          Header="Usuarios" />
                <MenuItem Name="PaymentCrudItemm"
                          Click="PaymentCrudItemm_Click"
                          Header="Pagos" />
                <MenuItem Header="Documentos">
                    <MenuItem Name="CreateDocEntry"
                              Click="MenuItem_Click_2"
                              Header="Crear Entrada" />
                    <MenuItem Header="Pendientes" />
                </MenuItem>
            </MenuItem>


            <MenuItem Header="&#xD;&#xA;Consultas">
                <MenuItem Header="Proveedor" Click="MenuItem_Click_4" />
                <MenuItem Header="Documentos" />
            </MenuItem>
            <MenuItem Header="&#xD;&#xA;Reporteria">
                <MenuItem Header="Documentos" />
                <MenuItem Click="MenuItem_Click_3" Header="Proveedores" />
                <MenuItem Header="Cierre" />
            </MenuItem>
        </Menu>
        <Label x:Name="PaymentLeft"
               Width="90"
               Height="31"
               Margin="10,15,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Por pagar: "
               FontWeight="Bold" FontSize="17.333" />
        <DataGrid x:Name="dataGrid"
                  Grid.ColumnSpan="2"
                  Height="250"
                  Margin="15,60,12,0"
                  VerticalAlignment="Top"
                  Grid.RowSpan="2" ToolTip="Haga doble click a uno de los elementos pendientes para pagar" 
                  >

            <DataGrid.ItemContainerStyle >
                <Style TargetType="DataGridRow" >
                    <EventSetter Event="MouseDoubleClick"  Handler="RowDoubleClick_Event"/>
                </Style>
            </DataGrid.ItemContainerStyle>
        </DataGrid>
        <Label x:Name="txtUserPermission"
               Margin="10,-20,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label"
               FontWeight="Bold" Width="165" FontSize="17.333" />

        <Label x:Name="TotalLbl" Content="cargando..." HorizontalAlignment="Left"  Margin="105,15,0,0" VerticalAlignment="Top" ToolTip="La suma de todo el balance por pagar" FontSize="17.333" />
        <Button x:Name="Reloadbutton"  HorizontalAlignment="Left" Margin="660,-42,0,0" VerticalAlignment="Top" Width="75" Height="52" Click="Reloadbutton_OnClick" ToolTip="Refrescar datos">
            <Canvas Width="24" Height="24">
                <Path Data="M19,12H22.32L17.37,16.95L12.42,12H16.97C17,10.46 16.42,8.93 15.24,7.75C12.9,5.41 9.1,5.41 6.76,7.75C4.42,10.09 4.42,13.9 6.76,16.24C8.6,18.08 11.36,18.47 13.58,17.41L15.05,18.88C12,20.69 8,20.29 5.34,17.65C2.22,14.53 2.23,9.47 5.35,6.35C8.5,3.22 13.53,3.21 16.66,6.34C18.22,7.9 19,9.95 19,12Z" Fill="White" Height="35.1" Canvas.Left="-11.1" Stretch="Fill" Width="45.1" Canvas.Top="-5.6" />
            </Canvas>
        </Button>

    </Grid>
</Window>